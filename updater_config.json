{
  "trash_config": {
    "trash_path": ".trash",
    "append_tag": true,
    "append_date": false
  },
  "apps": [
    {
      "name": "Variable Asset App (regex pattern)",
      "repo": "mockorg/variable-asset-app",
      "tag": "v3.2.0",
      "asset_pattern": "^variable-asset-app-.*\\.zip$",
      "asset_match_type": "regex",
      "install_path": "./test-downloads/variable-asset-app.zip",
      "use_prerelease": false,
      "post_download_hook": "./hooks/test_hook.sh",
      "post_download_hook_args": ["--arg1", "--arg2"]
    },
    {
      "name": "Variable Asset App Beta (prerelease)",
      "repo": "mockorg/variable-asset-app",
      "tag": "v3.2.1",
      "asset_pattern": "^variable-asset-app-.*\\.zip$",
      "asset_match_type": "regex",
      "install_path": "./test-downloads/variable-asset-app-beta.zip",
      "use_prerelease": true
    },
    {
      "name": "Fixed Name App (fixed)",
      "repo": "another-owner/fixed-name-app",
      "tag": "v3.2.0",
      "asset_pattern": "app-release.zip",
      "asset_match_type": "fixed",
      "install_path": "./test-downloads/app-release.zip",
      "install_path_match_type": "fixed"
    },
    {
      "name": "Tag Template App Linux (tag substitution)",
      "repo": "mockorg/tag-template-app",
      "tag": "v2.2.5",
      "asset_pattern": "template-app-{tag}-linux.tar.gz",
      "asset_match_type": "tag",
      "install_path": "./test-downloads/template-app-{tag}-linux.tar.gz",
      "install_path_match_type": "tag"
    },
    {
      "name": "Tag Template App Windows (tag substitution)",
      "repo": "mockorg/tag-template-app",
      "tag": "v2.2.5",
      "asset_pattern": "template-app-{tag}-windows.exe",
      "asset_match_type": "tag",
      "install_path": "./test-downloads/",
      "install_path_match_type": "asset_name"
    },
    {
      "name": "Download All Assets",
      "repo": "test-owner/download-all",
      "tag": "v5.1.0",
      "asset_match_type": "all",
      "install_path": "./test-downloads/"
    }
  ]
}
